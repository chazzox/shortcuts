{
	"include": ["src", "types"],
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"jsx": "react",
		"baseUrl": "./",
		"paths": {
			"@app/*": ["src/*"]
		},
		/* noEmit - Snowpack builds (emits) files, not tsc. */
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"types": ["snowpack-env"],
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"importsNotUsedAsValues": "error"
	}
}
