{
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"baseUrl": "src",
		"paths": {
			"*": ["*", "src/components/*", "src/stylesheets/*", "src/assets/*", "src/reduxStore/*", "/src/routes/*"]
		},

		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"jsx": "preserve"
	},
	"include": ["./src/custom.d.ts", "./src/**/*"]
}
